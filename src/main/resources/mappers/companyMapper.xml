<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="one.mapper.CompanyMapper">

	<select id="selectList" resultType="vo.CompanyVO">
		select * from company
	</select>
	
	<select id="selectOne" resultType="vo.CompanyVO">
		select * from company where cno = #{cno}
	</select>
	<!-- #{id} : parameter 로 전달된 vo 의 id 라는 컬럼의 value 가 전달됨 -->

	<insert id="insert">
		insert into company values(
		#{cno},#{cpw},#{cname},#{ctype},#{caddr},#{cdate},#{period},#{cimage},#{ctel},#{cprice},#{csite},#{cpark})
	</insert>
	
	<update id="update">
		update company set cpw=#{cpw}, cname=#{cname}, ctype=#{ctype}, caddr=#{caddr}
		, cdate=#{cdate}, period=#{period}, cimage=#{cimage}, ctel=#{ctel}, cprice=#{cprice}
		, csite=#{csite}, cpark=#{cpark} where cno=#{cno}
	</update>
	
	<delete id="delete">
		delete from company where cno=#{cno}	
	</delete>

</mapper>  
